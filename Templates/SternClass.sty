% For including the logo.
% Probably one would use the "graphics" package instead.
\RequirePackage{epsf}

% Various special fonts whose size is kept fixed (i.e., independent
% of whether document option 10pt, 11pt, or 12pt is used.

%% This font is used for the headings after the first page.
%% should be a nice sans serif font, but I don't know what
%% people have installed.

\font\myfontA=cmr9

\newcommand\tenpt{\set@fontsize{1.1}{10pt}{12pt}\selectfont}
\newcommand\elevenpt{\set@fontsize{1.1}{10.95pt}{13.6pt}\selectfont}
\newcommand\rmbf{%
  \fontfamily{cmr}%
  \fontseries{bx}%
  \fontshape{n}%
  \selectfont}

% \title[optional short title]{full title}

\def\title{\@dblarg\@@title}
\def\@@title[#1]#2{\def\@title{#2}\def\short@title{#1}}
\def\short@title{}

% SecondPage page style
% -- defines vertical page parameters and headers/footers for second pages:

\def\default@pageparameters{%
    \topmargin -1in       % To undo default margin of 1in
    \advance\topmargin 1.25cm
    \headheight .50cm
    \headsep   1.25cm
    \textheight\paperheight
    \advance\textheight -5cm}  % Leaves bottom margin of 2cm

\def\ps@secondpage{%
  \let\@oddfoot\relax
  \let\@evenfoot\relax
  \def\@oddhead{%
    \hbox to \textwidth{%
      \hss
      \tenpt
      \vbox to \z@{%
        \advance\hsize 1.2cm
        \vss
        \hbox to \hsize{%
          \myfontA
          \ClassName\kern 4pt :\kern 4pt
             \short@title\hfil\thepage}%
        \kern 3pt
        \hrule}%
      \hss}}
  \let\@evenhead\@oddhead}

\def\ps@SecondPage{%
  \default@pageparameters
  \ps@secondpage}

\pagestyle{SecondPage}

% FirstPage page style is the logo and class name

\def\ps@FirstPage{%
  \def\@oddfoot{}%
  \let\@evenfoot\@oddfoot
  \def\@oddhead{\Head}%
  \let\@evenhead\@evenfoot}

\def\Head{%
  \vbox to 0pt{%
    \vss
    \def\baselinestretch{1.1}%
    \rmbf
    \elevenpt
    \hbox to \hsize{%
     \vbox{%
       \hbox{\epsfxsize=2.5in\epsffile{stern_logo.eps}}}
     \hfill
     \vbox{%
       \llap{\Professor}
       \llap{\ClassName}
       \llap{\Semester}}}
    \kern -1cm}}

\def\makehead{%
  \thispagestyle{FirstPage}%
  \null
  \ifx\@title\@empty\else
    \begin{center}\leavevmode\Large\bf\@title\end{center}%
  \fi}

\endinput 